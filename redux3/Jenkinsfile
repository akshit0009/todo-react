pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install bootstrap react-bootstrap'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t react-app redux3/'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    def containerName = 'react-app-container'

                    // Stop and remove the existing container if it's running
                    sh "docker stop ${containerName} || true"
                    sh "docker rm ${containerName} || true"

                    // Run the Docker container
                    sh "docker run -p 3000:3000 -d --name ${containerName} react-app > build.log 2>&1"
                }
            }
        }
        stage('Publish to CloudWatch Logs') {
            steps {
                script {
                    def timestamp = currentTimestamp
                    sh "aws logs put-log-events --log-group-name my-logs-group --log-stream-name 20240217 --region ap-south-1 --log-events '[{\"message\": \"Example log event 1\", \"timestamp\": ${timestamp}}]'"
                }
            }
        }
    }

    
}