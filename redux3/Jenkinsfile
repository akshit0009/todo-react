pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install bootstrap react-bootstrap'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t react-app redux3/'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    def containerName = 'react-app-container'

                    // Stop and remove the existing container if it's running
                    sh "docker stop ${containerName} || true"
                    sh "docker rm ${containerName} || true"

                    // Run the Docker container with AWS CloudWatch Logs integration
                    sh "docker run -dit 
                    --log-driver=awslogs --log-opt awslogs-group=my-logs-group -p 3000:3000 --name ${containerName} react-app > build.log 2>&1"
                }
            }
        }
    }
}
